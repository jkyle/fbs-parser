@ITEM DEFAULT

TAKE >>
? $THIS.takeable is true
  ? $LOCATION has $THIS
    - $INVENTORY add $THIS
    - $LOCATION remove $THIS
    - ((You take {@ $THIS }.))
  x
  ? $LOCATION lacks $THIS
    - ((You can't do that.))
  x
x
? $THIS.takeable is false
  - ((You can't take that.))
x

LOOK >>
? $THIS is $LOCATION
  - ((You see {@ $LOCATION}, but it's not very interesting))
x
? $LOCATION has $THIS
  - ((You see {@ $THIS}, but it's not very interesting))
x
